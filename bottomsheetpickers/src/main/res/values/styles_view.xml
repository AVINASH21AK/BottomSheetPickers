<!-- platform/packages/apps/PhoneCommon/+/master/res/values/styles.xml -->
<resources>
    <style name="BSP_GridPickerButtonRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="BSP_GridPickerSpaceStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="BSP_GridPickerButtonStyle">
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">13</item>
        <item name="android:minHeight">@dimen/bsp_gridpicker_button_height</item>
        <item name="android:background">@drawable/bsp_gridpicker_button_background</item>
        <item name="android:focusable">true</item>
    </style>
</resources>