<!-- platform/packages/apps/PhoneCommon/+/master/res/values/styles.xml -->
<resources>
    <style name="BSP_GridPickerVerticalTopSpaceStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/bsp_gridpicker_margin_top</item>
        <item name="layout_columnSpan">@integer/bsp_gridpicker_column_count</item>
    </style>

    <style name="BSP_GridPickerVerticalBottomSpaceStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/bsp_gridpicker_margin_bottom</item>
        <item name="layout_columnSpan">@integer/bsp_gridpicker_column_count</item>
    </style>

    <style name="BSP_GridPickerRowGutterStyle">
        <!-- TODO: Define dimens for width using 16dp when smallest width < 600dp and 24dp otherwise. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_columnWeight">3</item>
    </style>

    <style name="BSP_ButtonBackgroundStyle">
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="BSP_GridPickerButtonStyle" parent="BSP_ButtonBackgroundStyle">
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/bsp_gridpicker_button_height</item>
        <item name="android:focusable">true</item>
        <item name="layout_columnWeight">1</item>
    </style>

    <style name="BSP_GridPickerTextButtonStyle" parent="BSP_GridPickerButtonStyle">
        <item name="android:textSize">@dimen/bsp_gridpicker_button_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="BSP_NumberPadTimePicker_AltTextButtonStyle" parent="BSP_GridPickerTextButtonStyle">
        <item name="android:textSize">@dimen/bsp_numberpad_time_picker_alt_button_text_size</item>
        <item name="layout_gravity">fill_vertical</item>
    </style>

    <style name="BSP_NumberPadTimePicker_InputTimeStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/bsp_numberpad_time_picker_input_time_text_size</item>
    </style>

    <style name="BSP_NumberPadTimePicker_InputAmPmStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/bsp_numberpad_time_picker_input_ampm_text_size</item>
        <item name="android:layout_marginLeft">@dimen/bsp_numberpad_time_picker_ampm_header_margin_start</item>
        <item name="android:layout_marginStart">@dimen/bsp_numberpad_time_picker_ampm_header_margin_start</item>
        <item name="android:layout_marginRight">@dimen/bsp_numberpad_time_picker_ampm_header_margin_end</item>
        <item name="android:layout_marginEnd">@dimen/bsp_numberpad_time_picker_ampm_header_margin_end</item>
    </style>

    <style name="BSP_NumberPadTimePicker_BackspaceStyle" parent="BSP_ButtonBackgroundStyle">
    </style>
</resources>