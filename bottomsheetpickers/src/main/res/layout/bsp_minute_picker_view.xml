<?xml version="1.0" encoding="utf-8"?>
<!-- Contents of a MinutePickerView (LinearLayout). -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.philliphsu.bottomsheetpickers.view.GridPickerView
        android:id="@+id/bsp_preset_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="@integer/bsp_gridpicker_column_count">

        <ImageButton
            android:id="@+id/bsp_dec_min"
            style="@style/BSP_GridPickerButtonStyle"
            app:srcCompat="@drawable/bsp_ic_minus_circle_view_24dp" />

        <Space style="@style/BSP_GridPickerButtonStyle" />

        <ImageButton
            android:id="@+id/bsp_inc_min"
            style="@style/BSP_GridPickerButtonStyle"
            app:srcCompat="@drawable/bsp_ic_add_circle_view_24dp" />

    </android.support.v7.widget.GridLayout>
    
</merge>