<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Height of a button in a grid-based picker. -->
    <dimen name="bsp_gridpicker_button_height">48dp</dimen>
    <!-- Text size of button texts in a grid-based picker. -->
    <dimen name="bsp_gridpicker_button_text_size">24sp</dimen>
    <!-- Top padding for a grid-based picker. -->
    <dimen name="bsp_gridpicker_padding_top">0dp</dimen>
    <!-- Bottom padding for a grid-based picker. -->
    <dimen name="bsp_gridpicker_padding_bottom">0dp</dimen>

    <!-- Top padding for a bottom sheet grid-based picker. -->
    <dimen name="bsp_bottom_sheet_grid_picker_padding_top">8dp</dimen>
    <!-- Size of the FAB container in a bottom sheet grid-based picker.
         This is the mini FAB size (40dp) + 8dp top margin + 16dp bottom margin.
         Margins are included so that the FAB's elevation shadow is not cut off. -->
    <dimen name="bsp_bottom_sheet_grid_picker_fab_container_size">64dp</dimen>
    <!-- The bottom margin of the FAB in a bottom sheet grid-based picker. -->
    <dimen name="bsp_bottom_sheet_grid_picker_fab_bottom_margin">8dp</dimen>
    <dimen name="bsp_bottom_sheet_grid_picker_fab_elevation">0dp</dimen>

    <dimen name="bsp_numberpad_time_picker_header_height">48dp</dimen>
    <dimen name="bsp_numberpad_time_picker_alt_button_text_size">24sp</dimen>
    <dimen name="bsp_numberpad_time_picker_input_time_text_size">34sp</dimen>
    <dimen name="bsp_numberpad_time_picker_input_ampm_text_size">12sp</dimen>

    <!-- Width of the alert dialog in landscape. -->
    <dimen name="bsp_alert_dialog_width">300dp</dimen>
    <!-- Width of the bottom sheet dialog in landscape. -->
    <dimen name="bsp_bottom_sheet_dialog_width">340dp</dimen>
